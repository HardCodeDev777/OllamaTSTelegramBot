{
    "compilerOptions": {
      "target": "ES2022",                     
      "module": "ESNext",                      
      "moduleResolution": "Bundler",         
      "lib": ["ES2022"],                    
      "types": ["node"],                     
      "esModuleInterop": true,               
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "strict": true
    },
    "include": ["**/*.ts"]
}